{
  "manifest_version": 2,
  "name": "Youtube Default Title",
  "version": "0.1",
  "permissions": [
    "tabs",
    "webNavigation"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "http://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true 
  }
}